@using EM.Domain
@model EM.Domain.Aluno

@{
    bool isEdicao = ViewBag.IsEdicao ?? false;
    string titulo = isEdicao ? "Editar Aluno" : "Cadastrar Aluno";

    ViewData["Title"] = titulo;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h2>@ViewData["Title"]</h2>
                </div>
                <div class="card-body">
                    <form asp-controller="Aluno" asp-action="Salvar" method="post">
                        
                        @* Campo oculto para Matrícula (quando for edição) *@
                        @if (isEdicao)
                        {
                            <input type="hidden" asp-for="Matricula" />
                        }

                        @* Nome *@
                        <div class="form-group mb-3">
                            <label asp-for="Nome" class="form-label">Nome Completo</label>
                            <input asp-for="Nome" class="form-control" required maxlength="100" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>

                        @* CPF *@
                        <div class="form-group mb-3">
                            <label asp-for="Cpf" class="form-label">CPF</label>
                            <input asp-for="Cpf" class="form-control" required maxlength="14" placeholder="000.000.000-00" />
                            <span asp-validation-for="Cpf" class="text-danger"></span>
                        </div>

                        @* Data de Nascimento *@
                        <div class="form-group mb-3">
                            <label asp-for="DataNascimento" class="form-label">Data de Nascimento</label>
                            <input asp-for="DataNascimento" type="date" class="form-control" required />
                            <span asp-validation-for="DataNascimento" class="text-danger"></span>
                        </div>

                        @* Sexo *@
                        <div class="form-group mb-3">
                            <label asp-for="EnumeradorSexo" class="form-label">Sexo</label>
                            <select asp-for="EnumeradorSexo" class="form-select" required>
                                <option value="">Selecione...</option>
                                <option value="0">Masculino</option>
                                <option value="1">Feminino</option>
                            </select>
                            <span asp-validation-for="EnumeradorSexo" class="text-danger"></span>
                        </div>

                        @* Cidade *@
                        <div class="form-group mb-3">
                            <label asp-for="CidadeId" class="form-label">Cidade</label>
                            <select asp-for="CidadeId" class="form-select" required>
                                <option value="">Selecione uma cidade...</option>
                                @foreach (var cidade in ViewBag.Cidades)
                                {
                                    if (Model != null && Model.CidadeId == cidade.Codigo)
                                    {
                                        <option value="@cidade.Codigo" selected>@cidade.Descricao - @cidade.UF</option>
                                    }
                                    else
                                    {
                                         <option value="@cidade.Codigo">@cidade.Descricao - @cidade.UF</option>
                                    }
                                }
                            </select>
                            <span asp-validation-for="CidadeId" class="text-danger"></span>
                        </div>

                        @* Botões *@
                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> @(isEdicao ? "Salvar Alterações" : "Cadastrar")
                            </button>
                            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Voltar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

