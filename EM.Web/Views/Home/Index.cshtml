@model IEnumerable<EM.Domain.Aluno>

@{
    ViewData["Title"] = "Lista de Alunos";
}

<div class="d-flex justify-content-between align-items-center">
    <h2>@ViewData["Title"]</h2>
    <a href="@Url.Action("Salvar", "Aluno")" class="btn btn-success btn-sm p-2">
        Adicionar Aluno
    </a>
</div>

<form method="get" asp-action="Buscar" class="row mb-3">
    <div class="col-md-5">
        <input type="text" name="termoPesquisa" class="form-control" placeholder="Matrícula ou nome do aluno..." />
    </div>
    <div class="col-md-3">
        <select name="tipoPesquisa" class="form-control">
            <option value="todos">Todos</option>
            <option value="matricula">Matrícula</option>
            <option value="nome">Nome</option>
        </select>
    </div>
    <div class="col-md-2">
        <button type="submit" class="btn btn-primary">Buscar</button>
    </div>
</form>

@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success">
        @TempData["MensagemSucesso"]
    </div>
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger">
        @TempData["MensagemErro"]
    </div>
}

@if (Model.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Matrícula</th>
                <th>Nome</th>
                <th>CPF</th>
                <th>Data de Nascimento</th>
                <th>Sexo</th>
                <th>Cidade</th>
                <th>Opcões</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var aluno in Model)
            {
                <tr>
                    <td>@aluno.Matricula</td>
                    <td>@aluno.Nome</td>
                    <td>@aluno.Cpf</td>
                    <td>@aluno.DataNascimento.ToString("dd/MM/yyyy")</td>
                    <td>@aluno.EnumeradorSexo</td>
                    <td>@aluno.Cidade?.Descricao</td>
                    <td>
                        <a href="@Url.Action("Salvar", "Aluno", new { id = aluno.Matricula })" class="btn btn-primary btn-sm">
                            Editar
                        </a>
                        <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#excluirModal"
                                onclick="abrirModalExcluir('@aluno.Matricula', '@aluno.Nome')">
                            Excluir
                        </button>
                    </td>     
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">
        Nenhum aluno encontrado.
    </div>
}
<!-- Modal de exclusão -->
<div class="modal fade" id="excluirModal" tabindex="-1" aria-labelledby="excluirModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="formExcluir" method="post" asp-action="Remove" asp-controller="Aluno">
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h5 class="modal-title" id="excluirModalLabel">Confirmar Exclusão</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
                </div>
                <div class="modal-body">
                    <p>Tem certeza que deseja excluir o aluno <strong id="alunoNome"></strong>?</p>
                    <input type="hidden" name="id" id="alunoCodigo" value="" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-danger">Excluir</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    function abrirModalExcluir(id, nome) {
        document.getElementById("alunoCodigo").value = id;
        document.getElementById("alunoNome").innerText = nome;
    }
</script>

