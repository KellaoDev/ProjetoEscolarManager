@model IEnumerable<EM.Domain.Cidade>

@{
    ViewData["Title"] = "Lista de Cidades";
}

<div class="d-flex justify-content-between align-items-center">
    <h2 class="mb-4">@ViewData["Title"]</h2>
    <a href="@Url.Action("Salvar", "Cidade")" class="btn btn-success btn-sm p-2">
        Adicionar Cidade
    </a>
</div>

<form method="get" asp-action="Buscar" class="row mb-3">
    <div class="col-md-5">
        <input type="text" name="termoPesquisa" class="form-control" placeholder="Descriçao ou UF da cidade..." />
    </div>
    <div class="col-md-3">
        <select name="tipoPesquisa" class="form-control">
            <option value="todos">Todos</option>
            <option value="descricao">Descrição</option>
            <option value="uf">UF</option>
        </select>
    </div>
    <div class="col-md-2">
        <button type="submit" class="btn btn-primary">Buscar</button>
    </div>
</form>

@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success">
        @TempData["MensagemSucesso"]
    </div>
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger">
        @TempData["MensagemErro"]
    </div>
}

@if (Model.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Código</th>
                <th>Nome da cidade</th>
                <th>UF</th>
                <th>Código IBGE</th>
                <th>Opções</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cidade in Model)
            {
                <tr>
                    <td>@cidade.Codigo</td>
                    <td>@cidade.Descricao</td>
                    <td>@cidade.EnumeradorUF</td>
                    <td>@cidade.CodigoIBGE</td>
                    <td>
                        <a href="@Url.Action("Salvar", "Cidade", new { id = cidade.Codigo })" class="btn btn-primary btn-sm">
                            Editar
                        </a>
                        <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#excluirModal"
                                onclick="abrirModalExcluir('@cidade.Codigo', '@cidade.Descricao')">
                            Excluir
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
} else
{
    <div class="alert alert-info">
        Nenhuma cidade encontrada.
    </div>
}

<!-- Modal de exclusão -->
<div class="modal fade" id="excluirModal" tabindex="-1" aria-labelledby="excluirModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="formExcluir" method="post" asp-action="Remove" asp-controller="Cidade">
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h5 class="modal-title" id="excluirModalLabel">Confirmar Exclusão</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
                </div>
                <div class="modal-body">
                    <p>Tem certeza que deseja excluir a cidade <strong id="cidadeNome"></strong>?</p>
                    <input type="hidden" name="id" id="cidadeId" value="" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-danger">Excluir</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    function abrirModalExcluir(id, nome) {
        document.getElementById("cidadeId").value = id;
        document.getElementById("cidadeNome").innerText = nome;
    }
</script>
