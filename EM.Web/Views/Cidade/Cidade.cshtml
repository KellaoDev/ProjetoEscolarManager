@using EM.Domain
@using EM.Domain.Enums
@model EM.Domain.Cidade

@{
    bool isEdicao = ViewBag.IsEdicao ?? false;
    string titulo = isEdicao ? "Editar Cidade" : "Cadastrar Cidade";

    ViewData["Title"] = titulo;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h2>@ViewData["Title"]</h2>
                </div>
                <div class="card-body">
                    <form asp-controller="Cidade" asp-action="Salvar" method="post">

                        @if (isEdicao)
                        {
                            <input type="hidden" asp-for="Codigo" />
                        }

                        <div class="form-group mb-3">
                            <label asp-for="Descricao" class="form-label"></label>
                            <input asp-for="Descricao" class="form-control" />
                            <span asp-validation-for="Descricao" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="EnumeradorUF" class="form-label"></label>
                            <select asp-for="EnumeradorUF" class="form-control"
                                    asp-items="Html.GetEnumSelectList<EnumeradorUF>()">
                            </select>
                            <span asp-validation-for="EnumeradorUF" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="CodigoIBGE" class="form-label"></label>
                            <input asp-for="CodigoIBGE" type="number" class="form-control" />
                            <span asp-validation-for="CodigoIBGE" class="text-danger"></span>
                        </div>

                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> @(isEdicao ? "Salvar Alterações" : "Cadastrar")
                            </button>
                            <a asp-controller="Cidade" asp-action="ListaCidade" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Voltar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>